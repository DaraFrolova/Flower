<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9E4"
    tools:context=".Fragment_9">

    <Button
        android:id="@+id/button_f9_1"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#E38E9E"
        android:fontFamily="@font/comfortaa"
        android:text="Сохранить"
        android:textColor="#FDF9F9"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />



    <EditText
        android:id="@+id/edit_mail"
        style="@android:style/Widget.Material.AutoCompleteTextView"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_style"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:hint="почта"
        android:inputType="text"
        android:paddingStart="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#464242"
        android:textColorHint="#66464242"
        app:layout_constraintBottom_toTopOf="@+id/edit_adr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/edit_adr"
        style="@android:style/Widget.Material.AutoCompleteTextView"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_style"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:hint="адрес доставки"
        android:inputType="text"
        android:paddingStart="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#464242"
        android:textColorHint="#66464242"
        app:layout_constraintBottom_toTopOf="@+id/edit_tel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/edit_tel"
        style="@android:style/Widget.Material.AutoCompleteTextView"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/round_style"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:hint="Контактный телефон"
        android:inputType="text"
        android:paddingStart="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#464242"
        android:textColorHint="#66464242"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/comfortaa"
        android:text="Профиль"
        android:textColor="#E38E9E"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/log0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="220dp"
        android:fontFamily="@font/comfortaa"
        android:text="Логин -"
        android:textColor="#E38E9E"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_adr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:id="@+id/log1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="220dp"
        android:fontFamily="@font/comfortaa"
        android:text="+++++++"
        android:textColor="#E38E9E"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_adr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/adr0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="150dp"
        android:fontFamily="@font/comfortaa"
        android:text="Адрес доставки"
        android:textColor="#E38E9E"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_adr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp"
        android:fontFamily="@font/comfortaa"
        android:text="------"
        android:textColor="#E38E9E"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_adr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tel0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/comfortaa"
        android:text="Телефон -"
        android:textColor="#E38E9E"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_adr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/comfortaa"
        android:text="------"
        android:textColor="#E38E9E"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_adr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>
